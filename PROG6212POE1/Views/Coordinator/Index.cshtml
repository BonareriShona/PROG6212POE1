@model IEnumerable<CMCSWeb.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Pending Claims for Verification</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No pending claims found.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Lecturer</th>
                    <th>Hours</th>
                    <th>Rate (R)</th>
                    <th>Total</th>
                    <th>Date Submitted</th>
                    <th>Status</th>
                    <th>Document</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@(claim.HoursWorked * (double)claim.HourlyRate)</td>
                        <td>@claim.SubmittedAt.ToShortDateString()</td>
                        <td><span class="badge bg-warning">@claim.Status</span></td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.DocumentPath))
                            {
                                <a href="@Url.Content("~/uploads/" + claim.DocumentPath)" target="_blank">View</a>
                            }
                            else
                            {
                                <span>No file</span>
                            }
                        </td>
                        <td>
                            <form asp-action="Approve" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <form asp-action="Reject" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
