@model IEnumerable<CMCSWeb.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims";
}

<h2>Pending Claims</h2>

@if (ViewBag.InfoMessage != null)
{
    <div class="alert alert-info">@ViewBag.InfoMessage</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Status</th>
            <th>Submitted At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Status</td>
                <td>@claim.SubmittedAt.ToString("g")</td>
                <td>
                    <form asp-action="Verify" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button class="btn btn-success btn-sm">Verify</button>
                    </form>
                    <form asp-action="Reject" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
