@model IEnumerable<CMCSWeb.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturers";
}

<h2>Lecturers</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Lecturer</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.LecturerId)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.HourlyRate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.LecturerId</td>
                <td>@lecturer.FullName</td>
                <td>@lecturer.Email</td>
                <td>@lecturer.HourlyRate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@lecturer.LecturerId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@lecturer.LecturerId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@lecturer.LecturerId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
