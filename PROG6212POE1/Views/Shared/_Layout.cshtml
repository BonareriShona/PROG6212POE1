<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCSWeb</title>

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- ✅ Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">CMCSWeb</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Home -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <!-- ✅ Lecturer Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="lecturerDropdown" role="button" data-bs-toggle="dropdown">
                            Lecturer
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="lecturerDropdown">
                            <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Submit">Submit Claim</a></li>
                            <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Track">Track My Claims</a></li>
                        </ul>
                    </li>

                    <!-- ✅ Coordinator Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="coordinatorDropdown" role="button" data-bs-toggle="dropdown">
                            Coordinator
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="coordinatorDropdown">
                            <li><a class="dropdown-item" asp-controller="Coordinator" asp-action="Manage">Manage Pending Claims</a></li>
                            <li><a class="dropdown-item" asp-controller="Coordinator" asp-action="Verified">Verified Claims</a></li>
                        </ul>
                    </li>

                    <!-- ✅ Manager Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown">
                            Manager
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="managerDropdown">
                            <li><a class="dropdown-item" asp-controller="Manager" asp-action="Manage">Approve/Reject Claims</a></li>
                        </ul>
                    </li>

                    <!-- About -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Flash Messages -->
    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- ✅ Main Content Area -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ Footer -->
    <footer class="bg-light text-center text-muted py-3 mt-5 border-top">
        <div class="container">
            &copy; @DateTime.Now.Year - CMCSWeb | Contract Monthly Claim System
        </div>
    </footer>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
